<% tag_name = tag_name || "" %>
<% count = count || "" %>
<% if count.blank? %> 
  <% if tag_name.blank? %>
    <%= link_to tag.name, search_index_path({tag_list: [tag.name]}), class: "tag" %>
  <% else %>
    <%= link_to tag_name, search_index_path({tag_list: [tag_name]}), class: "tag" %>
  <% end %>
<% else %>
  <% if tag_name.blank? %>
    <%= link_to "#{tag.name} (#{count})", search_index_path({tag_list: [tag_name]}), class: "tag" %>
  <% else %>
    <%= link_to "#{tag_name} (#{count})", search_index_path({tag_list: [tag_name]}), class: "tag" %>
  <% end %>
<% end %>
