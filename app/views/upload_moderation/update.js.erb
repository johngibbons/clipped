<% if @upload.approved? %>
  if ( $(".upload").length ) {
    var u = $(".upload[data-id=<%= @upload.id %>]");
    u.find(".moderation-form").html("<%= escape_javascript(render('upload_moderation/disapprove', upload: @upload)) %>");
  } else {
    $(".moderation-form").html("<%= escape_javascript(render('upload_moderation/disapprove', upload: @upload)) %>");
  }
<% else %>
  if ( $(".upload").length ) {
    var u = $(".upload[data-id=<%= @upload.id %>]");
    u.find(".moderation-form").html("<%= escape_javascript(render('upload_moderation/approve', upload: @upload)) %>");
  } else {
    $(".moderation-form").html("<%= escape_javascript(render('upload_moderation/approve', upload: @upload)) %>");
  }
<% end %>

if ( $(".upload-single-image").length ) {
  $(".upload-single-image").toggleClass("unapproved");
}


