<%= form_for(current_user.comments.build, remote: true) do |f| %>
  <table>
    <tr>
      <td>
        <div class="commenter-avatar">
          <%= image_tag current_user.avatar.url(:profile), class: "avatar" %>
        </div>
        <%= f.hidden_field :commentee_id, value: @upload.id %>
        <%= f.hidden_field :parent_id, value: @parent.id if @parent %>
      </td>
      <td>
        <%= f.text_area :body, placeholder: "Add a comment..." %>
      <%= f.submit "submit" %>
      <%= f.button "cancel", type: "button", class: "secondary cancel" %>
      </td>
    </tr>
  </table>
<% end %>
