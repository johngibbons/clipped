<% if @parent %>
  $("<%= escape_javascript(render partial: 'comments/comment', locals: {comment: @comment}) %>").prependTo("#comment-<%= @parent.id.to_s %> .replies");
  $(".comment form").remove();
<% else %>
  $("<%= escape_javascript(render partial: 'comments/comment', locals: {comment: @comment}) %>").prependTo(".comments-feed");
  $("#new_comment").remove();
<% end %>
$("#comment_body").val("");

$(".comments-count").html(<%= @upload.comments.count.to_s %>)
$(".add-comment").show();
