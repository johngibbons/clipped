    <%= f.label :tags %><br>
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :perspective %><br>
    <%= f.select :perspective, options_for_select(Upload.perspectives.map {|k, v| [k, k]}) %>
