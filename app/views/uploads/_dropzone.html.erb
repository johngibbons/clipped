<%= s3_uploader_form callback_url: uploads_url, id: "s3-uploader", class: "dropzone", callback_param: "upload[direct_upload_url]", expiration: 24.hours.from_now.utc.iso8601, max_file_size: 50.megabytes do %>
	 <%= hidden_field_tag  "Content-type", "" %>
	<div class="fallback">
		 <%= file_field_tag 'file', multiple: true %>
	</div>

<div id="uploader-container">
	<div class="dz-message"><h1>Drag files here or</h1></div>
	<div id="clickable" class="btn">Click here to select files</div>
	<div id="upload-previews"></div>
</div>

<div id="preview-template" class="dropzone-previews" style = "display: none;">
	<div class="dz-preview dz-file-preview">
		<%= link_to @upload, method: :delete, class: "delete-icon", data: { confirm: "Delete?" } do%> <i class="dz-remove fa fa-minus-circle" data-dz-remove></i> <% end %>
		<div class="dz-image-container">	  
			<div class="dz-success-mark animated fadeInDown"><i class="fa fa-check-circle-o fa-3x"></i></div>
		  <div class="dz-error-mark animated shake"><i class="fa fa-exclamation-circle fa-3x"></i></div>
	    <img data-dz-thumbnail />
    </div>

	  <div class="dz-details">
  	  <div class="dz-progress fadeOut"><span class="dz-upload" data-dz-uploadprogress></span></div>
	    <!-- <div class="dz-filename"><span data-dz-name></span></div>-->	
	    <div class="dz-size" data-dz-size></div>
	  </div>

	  <div class="dz-error-message"><span data-dz-errormessage></span></div>
	</div>
</div>

<% end %>