<% provide(:title, @user.name) %>
<section class="user_profile">
  <div class="user-info">
    <%= gravatar_for @user, size: 150 %>
    <h3 class="user-name"><%= @user.name %></h3>
  </div>
  <div class="user-stats stats">
    <ul>
      <li><%= @user.uploads.count %><span>Uploads</span></li>
      <li><%= @user.total_user_views %><span>Views</span></li>
      <li><%= @user.total_user_downloads %><span>Downloads</span></li>
      <li><%= @user.total_user_likes %><span>Likes</span></li>
    </ul>
  </div>
  <% if current_user?(@user) %>
   <%= link_to new_upload_path do %>
     <button class="upload-btn">Upload</button>
   <% end %>
  <% end %>
</section>
<section class="user-uploads-section">
  <div class="container">
    <div class="user-uploads">
      <% if @user.uploads.any? %>
        <div class="uploads-profile">
          <%= render @uploads %>
        </div>
        <%= will_paginate @uploads%>
      <% end %>
    </div>
  </div>
</section>