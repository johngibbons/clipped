<div id="edit-user-avatar">
	<%= image_tag @user.avatar.url(:large), :id => "cropbox", data: { ratio: @user.ratio, 
																																		crop_x: @user.crop_x, 
																																		crop_y: @user.crop_y,
																																		crop_w: @user.crop_w,
																																		crop_h: @user.crop_h,
																																		large_img_w: @user.avatar_geometry(:large).width,
																																		large_img_h: @user.avatar_geometry(:large).height,
																																		large_img_url: @user.avatar.url(:large) } %>

	<div id="profile-preview" style="width: 150px; height: 150px; overflow: hidden;">
		<%= image_tag @user.avatar.url(:profile), id: "previewHolder", class: "avatar", style: "width: 150px;" %>
	</div>
	<%= link_to "Edit Crop", "#", id: "edit-crop" %>
	<%= link_to "Crop", "#", id: "submit-crop", style: "display:none;" %>

	<%= f.file_field :avatar %>
</div>