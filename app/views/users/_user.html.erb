<%= link_to user, class: "user-thumb" do %>
	<div class="card">
	    <%= image_tag user.avatar.url(:profile), class: "avatar" %>
	    <p class="user-thumb-name">@<%= user.username %></p>

		<div class="hover-overlay">
	    <ul class="user-thumb-stats">
				<li><span class="stats-label"><i class="fa fa-upload"></i></span><span class="stats-val"><%= user.approved_uploads_count %></span></li>
		    <li><span class="stats-label"><i class="fa fa-star"></i></span><span class="stats-val"><%= user.favorites_count %></span></li>
		    <li><span class="stats-label"><i class="fa fa-download"></i></span><span class="stats-val"><%= user.downloads_count%></span></li>
		    <li><span class="stats-label"><i class="fa fa-eye"></i></span><span class="stats-val"><%= user.views_count %></span></li>
	    </ul>
    </div>
	</div>
<% end %>
