<%= link_to user, class: "user-thumb" do %>
	<div class="card">
	    <%= image_tag user.avatar.url(:profile), class: "avatar" %>
	    <p class="user-thumb-name"><%= user.name %></p>

		<div class="hover-overlay">
	    <ul class="user-thumb-stats">
				<li><span class="stats-label"><i class="fa fa-upload"></i></span><span class="stats-val"><%= user.uploads.count %></span></li>
		    <li><span class="stats-label"><i class="fa fa-star"></i></span><span class="stats-val"><%= user.total_user_likes %></span></li>
		    <li><span class="stats-label"><i class="fa fa-download"></i></span><span class="stats-val"><%= user.total_user_downloads %></span></li>
		    <li><span class="stats-label"><i class="fa fa-eye"></i></span><span class="stats-val"><%= user.total_user_views %></span></li>
	    </ul>
    </div>
	</div>
<% end %>
