<header class="home">
	<h1>Free Cutout Images</h1>
	<p>The best place to find and share background-free images.</p>
</header>

<div id="home-search">
  <h2>Find a cutout image:</h2>

  <%= form_tag search_index_path, :method => :get do %>
    <%= search_field_tag :search, params[:search], placeholder: "e.g. man looking up..." %>
	<% end %>

	<h2>Most Popular Tags:</h2>
	<div class="tag-items most-popular-home">
		<% @most_used_tags.each do |tag| %>
			<%= link_to tag.name, tag_path(tag.name), class: "tag" %>
		<% end %>
	</div>
</div>

<h2>Most Popular Images</h2>

<div class="most-popular-uploads flex-container">
  <% if @most_popular.any? %>
    <%= render @most_popular %>
  <% end %>
</div>