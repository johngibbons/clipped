<section id="home-banner">
	<div class="container no-pad">
		<h1>Free, High Quality, Cutout Images</h1>
		<div id="home-search">
			<h1 class="cta">What are you looking for?</h1>
			<%= render 'search/upload_search_form' %>
		</div>
	</div>
</section>

<section class="uploads-index">
	<div class="container">
		<div id="home-uploads">
			<h2 class="section-head">Featured</h2>
			<%= link_to "(browse all)", uploads_path, class: "more-link" %>
			<div class="most-popular-uploads flex-container">
			<% if @most_popular.any? %>
			  <%= render @most_popular %>
			<% end %>
			<% 6.times do %>
				<div class="upload"></div>
			<% end %>
			</div>
		</div>
	</div>
</section>

<section id="home-tags">
	<div class="container">
		<h2 class="section-head">Top Clippers</h2>
		<div class="tag-items most-popular-home">
			<% @most_used_tags.each do |tag| %>
				<%= link_to tag.name, tag_path(tag.name), class: "tag" %>
			<% end %>
		</div>
	</div>
</section>