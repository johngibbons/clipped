<%= form_tag search_index_path, :method => :get do %>
  <div id="home-search-form">
    <%= search_field_tag :search, params[:search], id: "upload-search" %>

    <button id="search-submit" class='icon'>
      <i class="fa fa-search"></i>
    </button>
  </div>

  <div class="search-tools">
    <% ["category", "perspective", "gender", "ethnicity", "season"].each do |attribute| %>
      <div id=<%= "#{attribute}-filter" %> class="search-filter">
        <label class="filter-label"><%= attribute %></label>
        <div class="dropdown">
          <ol>
            <% Upload.send("#{attribute.pluralize}").map do |k, v| %>
              <li>
                <%=	check_box_tag "#{attribute}_id[]", v, false, class: "#{attribute}-checkbox", id: "#{attribute}#{v}" %>
                <%=	label_tag "#{attribute}#{v}", k.humanize, value: k, class: "#{attribute}-select checkbox-select", id: "#{attribute}#{v}" %>
              </li>
            <% end %>
          </ol>
        </div>
      </div>
    <% end %>

  </div>

<% end %>
