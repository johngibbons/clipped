<%= form_tag search_index_path, :method => :get do %>
  <%= search_field_tag :search, params[:search], autofocus: true %>

	<%= submit_tag 'Search' %>

  <h2>Filter Search</h2>
  <div class="search-tools">

		<div class="filter">
	    <label class="filter-label">Category</label>
	    <div class="dropdown">
	      <ol>
	        <li>
	          <input id="red" type="checkbox">
	          <label for="red">People</label>
	        </li>
	        <li>
	          <input id="green" type="checkbox">
	          <label for="green">Animals</label>
	        </li>
	        <li>
	          <input id="blue" type="checkbox">
	          <label for="blue">Plants</label>
	        </li>
	        <li>
	          <input id="objects" type="checkbox">
	          <label for="objects">Objects</label>
	        </li>
	      </ol>
	    </div>
	  </div>

	  <div id="perspective-filter" class="filter">
		  <label class="filter-label">Perspective</label>
		  <div class="dropdown">
		  	<ol>
					<% Upload.perspectives.map do |k, v| %>
						<li>
							<%=	check_box_tag "perspective#{v}", v, false, class: "perspective-checkbox" %>
							<%=	label_tag "perspective#{v}", k.humanize, value: k, class: "perspective-select checkbox-select", id: "perspective#{v}" %>
						</li>
					<% end %>
				</ol>
			</div>
		</div>

	</div>
<% end %>
