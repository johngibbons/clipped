<%= provide(:title, "Log In") %>

<h1>Log In</h1>

<%= form_for(:session, url: login_path, html: {class: "user-form", id: "login-form"}) do |f| %>
	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :password %>
	<%= link_to "(forgot password?)", new_password_reset_path %>
	<%= f.password_field :password %>

	<%= f.submit "Log In" %>
<% end %>


<%= link_to '/auth/google_oauth2' do %>
  <button class="google">Log In With Google</button>
<% end %>

<%= link_to '/auth/facebook' do %>
	<button class="facebook">Log In With Facebook</button>
<% end %>

 <p>New user? <%= link_to "Sign up now!", signup_path %></p>
 <p>Need your activation email resent?  <%= link_to "click here", new_account_activation_path %>